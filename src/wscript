def configure(conf):
  conf.env.INCLUDES_qwt = '/usr/include/qwt'


def build(bld):
  bld.read_shlib('qwt')

  bld.read_shlib('vc-gdm70x')

  bld(
    features = 'qt4 cxx cxxprogram',
    uselib   = 'QTCORE QTGUI qwt',
    use      = 'qwt vc-gdm70x',
    source   = 'main.cpp mainwindow.cpp mainwindow.ui multimeteradapter.cpp sampleseries.cpp voltcraftgdm70x.cpp multimeter/multimeterexportwizard.cpp multimeter/multimeterexportwizard.ui',
    includes = '. ./multimeter',
    target   = 'mmgui',
  )
